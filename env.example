# DTF Editor - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_DB_URL=postgresql://postgres:[password]@[host]:5432/postgres

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Settings
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# AI SERVICE APIs
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_org_id_here

# Deep-Image.ai Configuration
DEEP_IMAGE_API_KEY=your_deep_image_api_key_here
DEEP_IMAGE_API_URL=https://api.deep-image.ai/rest_api

# ClippingMagic Configuration
CLIPPINGMAGIC_API_KEY=your_clippingmagic_api_key_here
CLIPPINGMAGIC_API_URL=https://api.clippingmagic.com/api/v1

# Vectorizer.ai Configuration
VECTORIZER_API_KEY=your_vectorizer_api_key_here
VECTORIZER_API_URL=https://api.vectorizer.ai/api/vectorize

# =============================================================================
# PAYMENT & SUBSCRIPTION
# =============================================================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Stripe Product IDs (Create these in your Stripe dashboard)
STRIPE_FREE_PLAN_PRICE_ID=price_free_plan_id_here
STRIPE_BASIC_PLAN_PRICE_ID=price_basic_plan_id_here
STRIPE_STARTER_PLAN_PRICE_ID=price_starter_plan_id_here

# Stripe Pay-as-You-Go Package IDs
STRIPE_PAYG_10_CREDITS_PRICE_ID=price_payg_10_credits_id_here
STRIPE_PAYG_20_CREDITS_PRICE_ID=price_payg_20_credits_id_here
STRIPE_PAYG_50_CREDITS_PRICE_ID=price_payg_50_credits_id_here

# =============================================================================
# FILE STORAGE
# =============================================================================

# Supabase Storage
SUPABASE_STORAGE_BUCKET=user-images
SUPABASE_STORAGE_URL=https://your-project.supabase.co/storage/v1

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/svg+xml,application/pdf

# =============================================================================
# EMAIL & COMMUNICATION
# =============================================================================

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@dtfeditor.com
SENDGRID_FROM_NAME=DTF Editor

# SendGrid Template IDs
SENDGRID_WELCOME_TEMPLATE_ID=d_welcome_template_id_here
SENDGRID_CREDIT_ALERT_TEMPLATE_ID=d_credit_alert_template_id_here
SENDGRID_SUBSCRIPTION_UPDATE_TEMPLATE_ID=d_subscription_template_id_here

# GoHighLevel Configuration
GOHIGHLEVEL_API_KEY=your_gohighlevel_api_key_here
GOHIGHLEVEL_LOCATION_ID=your_gohighlevel_location_id_here
GOHIGHLEVEL_API_URL=https://rest.gohighlevel.com/v1

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================

# Railway Configuration
RAILWAY_TOKEN=your_railway_token_here
RAILWAY_SERVICE_NAME=your_railway_service_name_here

# Application URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api
CLIENT_URL=http://localhost:3000

# =============================================================================
# FEATURE FLAGS & BUSINESS LOGIC
# =============================================================================

# Credit System
FREE_TIER_CREDITS=2
FREE_TIER_IMAGE_EXPIRY_HOURS=48
PAYG_IMAGE_EXPIRY_DAYS=90
CREDIT_EXPIRY_MONTHS=12
CREDIT_ROLLOVER_MONTHS=2

# API Rate Limits (requests per minute)
OPENAI_RATE_LIMIT=50
DEEP_IMAGE_RATE_LIMIT=100
CLIPPINGMAGIC_RATE_LIMIT=100
VECTORIZER_RATE_LIMIT=50

# Processing Timeouts (seconds)
IMAGE_PROCESSING_TIMEOUT=300
API_REQUEST_TIMEOUT=60

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_SAMPLE_RATE=1.0

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Settings
ENABLE_DEBUG_MODE=false
ENABLE_MOCK_APIS=false
ENABLE_TEST_MODE=false

# Test Configuration
TEST_DATABASE_URL=postgresql://postgres:[password]@[host]:5432/test_db
TEST_STRIPE_KEY=sk_test_test_key_here

# =============================================================================
# SECURITY & PRIVACY
# =============================================================================

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true

# Privacy
ENABLE_USER_TRACKING=true
ENABLE_COOKIE_CONSENT=true
PRIVACY_POLICY_URL=https://dtfeditor.com/privacy
TERMS_OF_SERVICE_URL=https://dtfeditor.com/terms

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Brand Configuration
BRAND_NAME=DTF Editor
BRAND_EMAIL=support@dtfeditor.com
BRAND_PHONE=+1-555-0123

# Social Media
TWITTER_URL=https://twitter.com/dtfeditor
FACEBOOK_URL=https://facebook.com/dtfeditor
INSTAGRAM_URL=https://instagram.com/dtfeditor

# Support
SUPPORT_EMAIL=support@dtfeditor.com
SUPPORT_PHONE=+1-555-0123
SUPPORT_CHAT_URL=https://dtfeditor.com/support

# =============================================================================
# NOTES
# =============================================================================

# IMPORTANT: 
# 1. Never commit .env files to version control
# 2. Use different keys for development, staging, and production
# 3. Rotate secrets regularly
# 4. Use strong, unique passwords for all services
# 5. Enable 2FA on all service accounts
# 6. Monitor API usage and costs regularly

# SETUP INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. Test the configuration
# 4. Deploy with proper environment variables 